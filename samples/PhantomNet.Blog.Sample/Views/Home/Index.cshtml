}

<h2>Remote Folder</h2>

<div class="remote-folder"></div>

@section scripts {
    <script src="~/lib/modernizr/modernizr.js"></script>
    <script src="~/lib/angular/angular.js"></script>
    @*<script src="~/lib/ng-file-upload-shim/ng-file-upload-shim.js"></script>
        <script src="~/lib/ng-file-upload/ng-file-upload.js"></script>*@
    <script src="~/lib/phantomnet-inheritance/dist/phantomnet-inheritance.js"></script>

    <script>
        window.GG = window.PN;

        var _unicode = "áàảãạăắằẳẵặâấầẩẫậéèẻẽẹêếềểễệíìỉĩịóòỏõọôốồổỗộơớờởỡợúùủũụưứừửữựýỳỷỹỵÁÀẢÃẠĂẮẰẲẴẶÂẤẦẨẪẬÉÈẺẼẸÊẾỀỂỄỆÍÌỈĨỊÓÒỎÕỌÔỐỒỔỖỘƠỚỜỞỠỢÚÙỦŨỤƯỨỪỬỮỰÝỲỶỸỴđĐ",
        _ascii = "aaaaaaaaaaaaaaaaaeeeeeeeeeeeiiiiiooooooooooooooooouuuuuuuuuuuyyyyyAAAAAAAAAAAAAAAAAEEEEEEEEEEEIIIIIOOOOOOOOOOOOOOOOOUUUUUUUUUUUYYYYYdD";
        GG.toAscii = function (source) {
            for (var i = 0; i < _unicode.length; i++) {
                var regexp = new RegExp(_unicode.substr(i, 1), "g");
                source = source.replace(regexp, _ascii.substr(i, 1));
            }
            return source;
        };

        GG.toUrlFriendly = function (source) {
            source = GG.toAscii(source).trim().toLowerCase();
            source = source.replace(/ /g, "-");
            source = source.replace(/&nbsp;/g, "-");
            source = source.replace(/[^0-9a-z-]/g, "");
            while (source.indexOf("--") > -1) {
                source = source.replace(/--/g, "-");
            }
            return source;
        };
    </script>

    <script src="~/js/remote-folder.js"></script>

    <script>
        $(function () {

            var options = {
                listUrl: '/RemoteFolder/ImageList',
                uploadUrl: '/RemoteFolder/UploadImage',
                renameUrl: '/RemoteFolder/RenameImage',
                deleteUrl: '/RemoteFolder/DeleteImage',
                predefinedFileNames: ['banner', 'list']
            };
            new GG.Components.RemoteFolder($('.remote-folder'), options);

        });
    </script>
}